<h2>Listado de Productos</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Nuevo Producto</a>
<table class="table">
    <thead>
        <tr><th>Nombre</th><th>Precio</th><th>Stock</th><th>Categoría</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nombre</td>
                <td>@p.Precio</td>
                <td>@p.Stock</td>
                <td>@p.Categoria?.Nombre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-primary">Editar</a>

                    <form asp-action="Delete" asp-route-id="@p.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar este producto?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>